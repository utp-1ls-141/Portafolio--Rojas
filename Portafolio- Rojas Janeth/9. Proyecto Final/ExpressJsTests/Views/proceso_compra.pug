            |
            input#inputApellido.form-control(type='text', placeholder='Apellido', required='')
            br
            label.sr-only(for='inputEdad') Edad
            |
            input#inputEdad.form-control(type='number', placeholder='Edad', required='')
            br
            label.sr-only(for='inputEmail') Email
            |
            input#inputEmail.form-control(type='email', placeholder='Email', required='')
            br
            label.sr-only(for='inputPassword') Password
            |             
            input#inputPassword.form-control(type='password', placeholder='Password', required='')
            br
            label.sr-only(for='inputPasswordConf') Password
            |             
            input#inputPasswordConf.form-control(type='password', placeholder='Confirmar Password', required='')
            br
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Crear
            